<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="CustomSpinnerDataBinding">

        <variable
            name="buildingDetails"
            type="ashish.be.gupta.firstapplication.modules.model.EntityBuildingModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="8dp"
            android:textColor="@color/colorTextView"
            android:textSize="16sp"
            app:buildingName="@{buildingDetails.buildingName}"
            app:buildingNumber="@{buildingDetails.buildingNumber}" />

    </RelativeLayout>
</layout>